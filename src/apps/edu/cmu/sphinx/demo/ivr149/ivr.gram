#JSGF V1.0;

/**
 * JSGF Grammar for Calc example
 */

grammar pizza;

public <size> = [I want (it | them) ] (big | small);
public <topping> = [I want it with] (cheese | mushrooms | chicken );
public <curst> = [I want it ] (pan | thick);
public <count> = [I want] (one | two | three);
public <confirm> = (yes | no);